#!/bin/bash

# Update package lists and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create a simple HTML file for the destination page (example: destination.html)
echo "<html><body><h1>This is the destination page</h1></body></html>" | sudo tee /var/www/html/destination.html

# Create a Nginx configuration file for the redirection
sudo tee /etc/nginx/sites-available/redirect_me <<EOF
server {
    listen 80;
    server_name _;

    location /redirect_me {
        return 301 /destination.html;
    }

    location /destination.html {
        root /var/www/html;
        index destination.html;
    }

    # Additional server configuration if needed
    # ...

}
EOF

# Create a symbolic link to enable the new site
sudo ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Remove the default Nginx default configuration
sudo rm /etc/nginx/sites-enabled/default

# Restart Nginx to apply changes
sudo systemctl restart nginx
